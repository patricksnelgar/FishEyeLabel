<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1.0" android:padding="0dp"
                android:showDividers="none" android:background="#FFFFFF">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Increment (+)"
            android:id="@+id/incButton" android:enabled="true" android:visibility="visible"
            android:background="#33CC33" android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prefixText" android:layout_alignParentLeft="true"
            android:text="N"
            android:textColor="#000000" android:textSize="190sp" android:inputType="textCapCharacters"
            android:layout_below="@+id/incButton" android:layout_above="@+id/decButton"
            android:imeOptions="actionDone" android:autoText="true" android:background="#FFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counterText" android:layout_gravity="center_vertical"
            android:text="000" android:textSize="190sp" android:textColor="#000000"
            android:layout_alignParentLeft="false" android:layout_marginLeft="0dip"
            android:layout_alignParentRight="true"
            android:inputType="number" android:layout_marginRight="0dip"
            android:layout_below="@+id/incButton" android:layout_above="@+id/decButton"
            android:imeOptions="actionDone" android:background="#FFFFFF"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Decrement (-)"
            android:id="@+id/decButton" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:visibility="visible" android:enabled="true" android:textColor="#000000"
            android:background="#FF5050"/>
</RelativeLayout>